  <%= f.text_field :name %><br/><br/>
  <%= f.label :percentage_as_decimal %>
  <%= f.text_field :percentage %><br/><br/>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %><br/><br/>
  <%= f.submit 'Submit'%>
<% end %>
